DEEPSEEK_API_KEY=your_deepseek_api_key
PORT=8787

# CORS: "*" means allow all origins.
# For production, prefer explicit list separated by comma.
# Example: CORS_ORIGINS=https://your-app.com,https://staging.your-app.com
CORS_ORIGINS=*

# Optional runtime controls
AI_MODEL_PRIMARY=deepseek-reasoner
AI_MODEL_FALLBACK=deepseek-chat
AI_MAX_TOKENS=4096
AI_TIMEOUT_MS=60000

# Request size/context limits
MAX_MESSAGES=30
MAX_MESSAGE_CHARS=4000
MAX_BOARD_SECTIONS=30
MAX_SECTION_TITLE_CHARS=120
MAX_SECTION_CONTENT_CHARS=8000

# Rate limit per IP
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Set true if running behind reverse proxy
TRUST_PROXY=false
